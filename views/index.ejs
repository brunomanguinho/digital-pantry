<%- include("header") -%>

<main class="form-signin">
  <form action="/" method="post">
    <img class="mb-4 logo-img" src="images/pantry.png" alt="" width="72" height="57" />
    <h1 class="h3 mb-3 fw-normal">Login or Register</h1>

    <input type="text" name="username" class="form-control top" placeholder="User Name" required autofocus />
    <input type="password" name="password" class="form-control bottom" placeholder="Password" required />

    <button class="w-100 btn btn-lg btn-primary" type="submit"> Login or Register  </button>
  </form>
</main>

